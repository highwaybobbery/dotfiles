alias v="nvim -p"
alias q="exit"
alias h="cd ~/"
alias p="cd ~/Projects/"
alias b="cd ~/Personal\ Brain/"
alias nvc="cd ~/.config/nvim && v"

alias :q="exit"
alias dotfiles="cd ~/Environment/dotfiles/"

alias source-aliases='source ~/.aliases'
alias aliases.local="cat ~/.aliases.local"

alias spec="bundle exec rspec"
alias insechrome="open /Applications/Google\ Chrome.app --args -allow-running-insecure-content"

alias brake="bundle exec rake"
alias braketest="RAILS_ENV=test bundle exec rake"

# git
alias g="git"
alias gl="git log"
alias gs="git status"
alias gco="git checkout"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
