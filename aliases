alias v="vim"
alias quit="exit"
alias :q="exit"
alias killswp="rm **/.*.*.sw*"
alias dotfiles="cd ~/environment/dotfiles/ && vim ."

alias spec="bundle exec rspec"
alias insechrome="open /Applications/Google\ Chrome.app --args -allow-running-insecure-content"

# changes dierectory and opens it in vim
cdAndVim() {
  cd $1
  vim $1
}

alias vcd=cdAndVim

# git
alias g="git"
alias gl="git log"
alias gbl="git branch"
alias gbd="git branch -d"
alias gbD="git branch -D"
alias gupi="git fetch upstream && git rebase -i upstream/local"
alias gs="git status"
alias stash="git stash"
alias pop="git stash pop"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
